<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SettingsController" style="-fx-padding:20;">
    <Label text="Settings" style="-fx-font-size:18; -fx-font-weight:bold;"/>
    <HBox spacing="10">
        <Label text="Tax (%)" />
        <TextField fx:id="taxField" promptText="e.g., 13.00" />
    </HBox>
    <HBox spacing="10">
        <Label text="Discount (%)" />
        <TextField fx:id="discountField" promptText="e.g., 5.00" />
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Low stock alert" />
    <CheckBox fx:id="lowStockEnable" />
    <!-- Threshold removed: fixed <10 rule when toggle is enabled -->
    </HBox>
    <HBox spacing="10">
        <Button fx:id="saveBtn" text="Save" />
        <Button fx:id="refreshBtn" text="Refresh" />
    </HBox>
</VBox>
