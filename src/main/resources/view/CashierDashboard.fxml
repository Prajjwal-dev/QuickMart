<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CashierDashboardController">
    <top>
            <HBox spacing="20" style="-fx-background-color: linear-gradient(to right, #4258d0, #c950c1); -fx-padding: 10;">
            <ImageView fx:id="logoImageView" fitHeight="38" fitWidth="38" pickOnBounds="true" preserveRatio="true" />
            <Label style="-fx-font-family: 'Poppins'; -fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" text="QuickMart" />
            <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
            <ImageView fx:id="topProfileImageView" fitHeight="40" fitWidth="40" />
         <Circle fill="#59ff1f" radius="5.0" stroke="BLACK" strokeType="INSIDE" />
            <VBox>
                <Label fx:id="topCashierName" style="-fx-font-family: 'Roboto'; -fx-font-size: 14; -fx-text-fill: white;" text="Cashier" />
                <Label style="-fx-font-family: 'Roboto'; -fx-font-size: 12; -fx-text-fill: white;" text="Role: Cashier" />
            </VBox>
            <Button fx:id="logoutBtn" style="-fx-font-family: 'Poppins'; -fx-font-size: 14; -fx-background-color: #eebbc3; -fx-text-fill: #232946;" text="Log Out" />
        </HBox>
    </top>
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <VBox spacing="20" style="-fx-pref-width: 220; -fx-background-color: #ffffff22; -fx-padding: 12; -fx-border-color: transparent;">
                <VBox alignment="CENTER" spacing="8" style="-fx-padding: 8;" />
                <VBox spacing="10" style="-fx-padding: 8;">
                    <Button fx:id="newBillingBtn" style="-fx-background-color: linear-gradient(to right,#7c4dff,#b388ff); -fx-text-fill: white; -fx-font-family: 'Poppins';" text="New Billing / POS" />
                    <Button fx:id="viewTransBtn" style="-fx-background-color: linear-gradient(to right,#4dd0e1,#26c6da); -fx-text-fill: white; -fx-font-family: 'Poppins';" text="View Daily Transactions" />
                    <Button fx:id="exitBtn" style="-fx-background-color: linear-gradient(to right,#ff6b6b,#ff8b8b); -fx-text-fill: white; -fx-font-family: 'Poppins';" text="Exit" />
                </VBox>
            </VBox>

            <VBox spacing="12" style="-fx-background-color: #fff; -fx-padding: 12; -fx-pref-width: 800; -fx-background-radius: 8;">
                <HBox spacing="10">
                    <TextField fx:id="productSearchField" promptText="Search product by name..." />
                    <Button fx:id="scanBtn" text="Scan Barcode" />
                </HBox>
                <StackPane fx:id="rightStack" prefHeight="520">
                    <VBox fx:id="welcomePane" alignment="CENTER" spacing="12">
                        <Label fx:id="txnHeader" style="-fx-font-family: 'Poppins'; -fx-font-size: 18;" text="Welcome to Cashier Dashboard" />
                        <Label text="Click 'New Billing / POS' to start a transaction." />
                    </VBox>
                    <VBox fx:id="txnPane" managed="false" spacing="8" visible="false">
                        <TableView fx:id="txnTable">
                        </TableView>
                        <HBox spacing="12" style="-fx-alignment:center-right; -fx-padding:8;">
                            <Button fx:id="prevBtn" text="&#x2190; Prev" />
                            <Button fx:id="nextBtn" text="Next &#x2192;" />
                        </HBox>
                    </VBox>
                </StackPane>
            </VBox>
        </HBox>
    </center>
</BorderPane>
