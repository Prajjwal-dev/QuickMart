<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: linear-gradient(to right, #4258d0, #c950c1); -fx-padding: 16;">
            <ImageView fx:id="logoImageView" fitHeight="38" fitWidth="38" pickOnBounds="true" preserveRatio="true" />
            <Label style="-fx-font-family: 'Poppins'; -fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" text="QuickMart" />
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #fff; -fx-background-radius: 12; -fx-padding: 40 40 40 40; -fx-effect: dropshadow(gaussian, #b8c1ec, 10, 0, 0, 2); -fx-min-width: 340; -fx-max-width: 340;">
               <ImageView fx:id="profileImageView" fitHeight="80" fitWidth="80" style="-fx-effect: dropshadow(gaussian, #fff, 8, 0.2, 0, 2); -fx-padding: 20 0 0 0;" />
                <Label style="-fx-font-size: 24px; -fx-font-family: 'Montserrat'; -fx-font-weight: bold; -fx-text-fill: #232946;" text="Sign in to QuickMart" />
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-size: 16px;" text="ðŸ‘¤" />
                    <TextField fx:id="usernameField" promptText="Username" style="-fx-pref-width: 220; -fx-font-family: 'Roboto';" />
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-size: 16px;" text="ðŸ”’" />
                    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-pref-width: 220; -fx-font-family: 'Roboto';" />
                </HBox>
                <Button fx:id="loginButton" style="-fx-background-color: #eebbc3; -fx-text-fill: #232946; -fx-background-radius: 8; -fx-font-size: 16; -fx-font-family: 'Poppins'; -fx-pref-width: 220;" text="Login" />
                <Button fx:id="forgotPasswordButton" style="-fx-background-color: transparent; -fx-text-fill: #b8c1ec; -fx-underline: true; -fx-font-size: 13; -fx-font-family: 'Roboto'; -fx-pref-width: 220;" text="Forgot Password?" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
