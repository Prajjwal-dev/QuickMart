<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: linear-gradient(to bottom right, #4258d0, #c950c1);" prefWidth="1280.0" prefHeight="720.0">
    <!-- Welcome Page -->
    <VBox fx:id="welcomePane" alignment="CENTER" prefHeight="514.0" prefWidth="809.0" spacing="30">
    <ImageView fx:id="logoImageView" fitHeight="100" fitWidth="100" style="-fx-padding: 0 0 10 0;" preserveRatio="true" pickOnBounds="true" />
        <Label alignment="TOP_CENTER" contentDisplay="TOP" graphicTextGap="10.0" style="-fx-font-size: 36px; -fx-font-family: 'Poppins'; -fx-font-weight: bold; -fx-text-fill: #232946; -fx-effect: dropshadow(gaussian, #fff, 8, 0.2, 0, 2);" text="Welcome to QuickMart" />
        <Button fx:id="getStartedBtn" contentDisplay="RIGHT" style="-fx-background-color: #232946; -fx-text-fill: #fff; -fx-font-size: 18px; -fx-font-family: 'Poppins'; -fx-background-radius: 20; -fx-padding: 10 40 10 40;" text="Get Started" />
    </VBox>
</StackPane>
